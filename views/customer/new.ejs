<div class="container" style="text-align: center">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/customer/create" method="POST">
                <h2>Create New Customer</h2>
                <input class="form-control" type="text" placeholder="Customer Name" name="name" ><br />
                <input class="form-control" type="text" placeholder="Customer Email" name="email" ><br />
                <input class="form-control" type="text" placeholder="Customer State" name="state" ><br />
                <input class="btn btn-success btn-block" type="submit" value="Create Customer" />
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>